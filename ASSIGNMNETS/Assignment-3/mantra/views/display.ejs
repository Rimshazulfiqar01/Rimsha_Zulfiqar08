<!-- Assuming this is your EJS template code -->

<%
// Sample array
const items = [
  { id: 1, name: "Shirt", price: 19.99 },
  { id: 2, name: "Jeans", price: 29.99 },
  { id: 3, name: "Shoes", price: 49.99 },
  { id: 4, name: "Hat", price: 9.99 }
];
%>

<!DOCTYPE html>
<html>
<head>
  <title>Items List</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Items List</h1>

    <a href="/add" class="btn btn-primary mb-3">Add Item</a>

    <% if (items.length > 0) { %>
      <ul class="list-group">
        <% items.forEach(function(item) { %>
          <li class="list-group-item">
            <div class="row">
              <div class="col">
                <strong><%= item.name %></strong> - <%= item.price %>
              </div>
              <div class="col-auto">
                <a href="/add/<%= item.id %>" class="btn btn-sm btn-primary">Edit</a>
                <a href="/delete/<%= item.id %>" class="btn btn-sm btn-danger">Delete</a>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No items found.</p>
    <% } %>
  </div>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
